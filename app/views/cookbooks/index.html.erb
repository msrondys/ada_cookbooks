<h2>Listing cookbooks</h2>

<table>
  <thead>
    <tr>
      <th class="visible-header">Name</th>
      <th class="visible-header">Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cookbooks.each do |cookbook| %>
      <tr>
        <td><%= cookbook.name %></td>
        <td><%= cookbook.description %></td>
        <td><%= link_to 'Show', cookbook %></td>
        <td><%= link_to 'Edit', edit_cookbook_path(cookbook) %></td>
        <td><%= link_to 'Destroy', cookbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="links-to-new">
<%= link_to 'New Cookbook', new_cookbook_path %>
</div>